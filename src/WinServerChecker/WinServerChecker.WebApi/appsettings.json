{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft": "Warning",
            "Microsoft.Hosting.Lifetime": "Information"
        }
    },
    "AllowedHosts": "*",
    "WinServerChecker": {
        "AuthenticatorsOperator": "all", // specifies if 'any' of the authenticators can pass or 'all' must pass
        "Authenticators": [
            // ensures a certain header exists
            //{
            //    "Name": "HeaderAuth",
            //    "Type": "WinServerChecker.Core.Authentication.RequestHeaderAuthenticator,WinServerChecker.Core",
            //    "HeaderName": "aaa",
            //    "HeaderValue": "bbb"
            //}

            // ensures the user-agent contains a certain string
            //{
            //    "Name": "UserAgentAuthenticator",
            //    "Type": "WinServerChecker.Core.Authentication.UserAgentAuthenticator,WinServerChecker.Core",
            //    "Contains": "test"
            //}

            // ensures the request is coming from one of the specified IPs
            //{
            //    "Name": "SourceIpAuthenticator",
            //    "Type": "WinServerChecker.Core.Authentication.SourceIpAuthenticator,WinServerChecker.Core",
            //    "IPs": "127.0.0.1;::1"
            //}
        ],
        "Checks": [
            {
                // inclused the computer name in the response
                "Name": "ComputerName",
                "Type": "WinServerChecker.Core.Checks.ComputerNameCheck,WinServerChecker.Core"
            },
            {
                // inclused the CPU % in the response
                "Name": "CPUCheck",
                "Type": "WinServerChecker.Core.Checks.CPUCheck,WinServerChecker.Core"
            },
            {
                // ensures the specified drive has the specified minimum percent free space
                "Name": "DiskSpaceCheck",
                "Type": "WinServerChecker.Core.Checks.DiskSpaceCheck,WinServerChecker.Core",
                "DriveLetter": "C:",
                "MinPercentFreeSpace": 10
            },
            {
                // inclused the uptime in the response
                "Name": "UptimeCheck",
                "Type": "WinServerChecker.Core.Checks.UptimeCheck,WinServerChecker.Core"
            },
            {
                // ensures the specified process is running
                "Name": "ProcessRunning",
                "Type": "WinServerChecker.Core.Checks.ProcessRunningCheck,WinServerChecker.Core",
                "ProcessName": "cheese",
                "MinInstances": "1" // Optional
                // "MaxInstances": "1" // Optional
            }
        ]
    }
}
